# Project: ArkMedia Stack (independent stacks)
TZ=Asia/Shanghai

# Runtime UID/GID
PUID=1000
PGID=1000
OPENLIST_UID=1000
OPENLIST_GID=1000

# Shared docker network name (must be same for all stacks)
ARK_NETWORK=arkmedia-net

# Public HTTPS ports (same domain, different service ports)
EMBY_HTTPS_PORT=8443
QBIT_HTTPS_PORT=2053
OPENLIST_HTTPS_PORT=2096

# Local loopback ports (host-only)
EMBY_LOCAL_PORT=28096
QBIT_LOCAL_PORT=28080
OPENLIST_LOCAL_PORT=25244

# Single access domain, e.g. pve.example.com
BASE_DOMAIN=pve.example.com

# ACME + Cloudflare DNS-01
ACME_EMAIL=you@example.com
CF_DNS_API_TOKEN=replace-with-cloudflare-token

# Paths on host
CADDY_DATA=/srv/docker/caddy/data
CADDY_CONFIG=/srv/docker/caddy/config
OPENLIST_DATA=/srv/docker/openlist
EMBY_CONFIG=/srv/docker/emby/config
QBIT_CONFIG=/srv/docker/qbittorrent
DOWNLOADS_PATH=/srv/downloads
MEDIA_LOCAL_PATH=/srv/media/local
MEDIA_INCOMING_PATH=/srv/media/incoming
CLOUD_MOUNT_ROOT=/srv/cloud
RCLONE_CACHE_DIR=/var/cache/rclone

# qBittorrent peer port
QBIT_PEER_PORT=16881

# Watchtower interval (seconds)
WATCHTOWER_INTERVAL=86400
